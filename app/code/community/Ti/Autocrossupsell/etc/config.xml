<?xml version="1.0" encoding="UTF-8"?>
<config>
    <modules>
        <Ti_Autocrossupsell>
            <version>1.0.1</version>
        </Ti_Autocrossupsell>
    </modules>
        <global>
            <helpers>
                    <ti_autocrossupsell>
                        <class>Ti_Autocrossupsell_Helper</class>
                    </ti_autocrossupsell>
                </helpers>
        </global>
        <frontend>
          <routers>
            <checkout>
              <args>
                <modules>
                  <Ti_Autocrossupsell before="Mage_Checkout">Ti_Autocrossupsell_Checkout</Ti_Autocrossupsell>
                </modules>
              </args>
            </checkout>
          </routers>
    </frontend>
     <adminhtml>
        <translate>
            <modules>
                <Ti_Autocrossupsell>
                    <files>
                        <default>Ti_Autocrossupsell.csv</default>
                    </files>
                </Ti_Autocrossupsell>
            </modules>
        </translate>
    </adminhtml>
</config>
